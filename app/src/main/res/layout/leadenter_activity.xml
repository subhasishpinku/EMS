<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-127dp">
        <RelativeLayout
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/fram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/header_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/bg_blue" />
            </FrameLayout>
            <ImageView
                android:id="@+id/Img_Id"
                android:layout_marginRight="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:background="@mipmap/white_logo" />
            <TextView
                android:id="@+id/led_tv"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/Img_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17sp"
                android:text="Add Leads"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/select_file"
                android:layout_below="@+id/Img_Id"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="12dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/white"
                android:background="@drawable/view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Leads"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_below="@+id/fram"
                    app:cardCornerRadius="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:elevation="8dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="10dp"
                            android:padding="5dp"
                            android:drawableRight="@drawable/ic_baseline_star_24"
                            android:textColor="@color/black"
                            android:text="First Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fname"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="0sp"
                            android:layout_below="@+id/select_Id"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="15dp"
                            android:background="@drawable/gray_border"
                            android:inputType="text"
                            android:hint="First Name" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="10dp"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="Middle Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mname"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="0sp"
                            android:layout_below="@+id/select_Id"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="15dp"
                            android:background="@drawable/gray_border"
                            android:inputType="text"
                            android:hint="Middle Name" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="10dp"
                            android:padding="5dp"
                            android:drawableRight="@drawable/ic_baseline_star_24"
                            android:textColor="@color/black"
                            android:text="Last Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/lname"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="0sp"
                            android:layout_below="@+id/select_Id"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="15dp"
                            android:background="@drawable/gray_border"
                            android:inputType="text"
                            android:hint="Last Name" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="10dp"
                            android:padding="5dp"
                            android:drawableRight="@drawable/ic_baseline_star_24"
                            android:textColor="@color/black"
                            android:text="Mobile No"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RelativeLayout
                            android:id="@+id/rv"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_below="@+id/select_Id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/mobileNo"
                                android:paddingLeft="10dp"
                                android:layout_marginTop="0sp"
                                android:layout_marginRight="80dp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textSize="15dp"
                                android:background="@drawable/gray_border"
                                android:inputType="number"
                                android:maxLength="10"
                                android:hint="Mobile No" />
<!--                            <TextView-->
<!--                                android:id="@+id/verify"-->
<!--                                android:layout_alignParentEnd="true"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_marginTop="10sp"-->
<!--                                android:layout_marginLeft="35sp"-->
<!--                                android:text="Verify"-->
<!--                                android:inputType="number"-->
<!--                                android:maxLength="10"-->
<!--                                android:textStyle="bold"-->
<!--                                android:textColor="@color/teal_200"-->
<!--                                android:textSize="17sp" />-->

                            <TextView
                                android:id="@+id/verify"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5sp"
                                android:layout_marginEnd="0dp"
                                android:background="@drawable/view_details"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Send Otp"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </RelativeLayout>


                            <pl.droidsonroids.gif.GifImageView
                                android:id="@+id/loaderId"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="#fff"
                                android:src="@mipmap/loaderp" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="10dp"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="Whatsapp No"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/whatsappno"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="0sp"
                            android:layout_below="@+id/select_Id"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="15dp"
                            android:background="@drawable/gray_border"
                            android:inputType="number"
                            android:maxLength="10"
                            android:hint="Whatsapp No" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="10dp"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="Email Id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emailId"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="0sp"
                            android:layout_below="@+id/select_Id"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="15dp"
                            android:background="@drawable/gray_border"
                            android:inputType="text"
                            android:hint="Email" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="10dp"
                            android:padding="5dp"
                            android:drawableRight="@drawable/ic_baseline_star_24"
                            android:textColor="@color/black"
                            android:text="Course"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_marginTop="0sp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="10dp"
                            android:paddingEnd="10dp"
                            android:layout_below="@+id/lv3"
                            android:layout_weight="1"
                            android:padding="11dp"
                            android:background="@drawable/gray_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Spinner
                                android:id="@+id/spinner"
                                android:textColor="@color/gray"
                                android:overlapAnchor="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/led_tv"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="10dp"
                            android:padding="5dp"
                            android:drawableRight="@drawable/ic_baseline_star_24"
                            android:textColor="@color/black"
                            android:text="Source"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_marginTop="0sp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="10dp"
                            android:paddingEnd="10dp"
                            android:layout_below="@+id/lv3"
                            android:layout_weight="1"
                            android:padding="11dp"
                            android:background="@drawable/gray_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Spinner
                                android:id="@+id/spinner1"
                                android:textColor="@color/gray"
                                android:overlapAnchor="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/led_tv"/>
                        </LinearLayout>
                    <LinearLayout
                        android:id="@+id/StudentLv"
                        android:layout_marginTop="5sp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="15dp"
                        android:paddingLeft="10dp"
                        android:paddingEnd="10dp"
                        android:layout_below="@+id/lv3"
                        android:layout_weight="1"
                        android:padding="11dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="10dp"
                            android:padding="5dp"
                            android:drawableRight="@drawable/ic_baseline_star_24"
                            android:textColor="@color/black"
                            android:text="Student Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/stuName"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="0sp"
                            android:layout_below="@+id/select_Id"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginLeft="0dp"
                            android:textSize="15dp"
                            android:background="@drawable/gray_border"
                            android:inputType="text"
                            android:hint="Student Name" />
                        <TextView
                            android:textSize="10dp"
                            android:layout_marginTop="5sp"
                            android:padding="5dp"
                            android:drawableRight="@drawable/ic_baseline_star_24"
                            android:textColor="@color/black"
                            android:text="Student Phone Number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/stuPhone"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="0sp"
                            android:layout_below="@+id/select_Id"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginLeft="0dp"
                            android:textSize="15dp"
                            android:background="@drawable/gray_border"
                            android:inputType="number"
                            android:maxLength="10"
                            android:hint="Student Phone Number" />

                    </LinearLayout>
                        <TextView
                            android:visibility="gone"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="10dp"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="Register Campaign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:visibility="gone"
                            android:layout_marginTop="0sp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="10dp"
                            android:paddingEnd="10dp"
                            android:layout_below="@+id/lv3"
                            android:layout_weight="1"
                            android:padding="11dp"
                            android:background="@drawable/gray_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Spinner
                                android:id="@+id/spinner2"
                                android:textColor="@color/gray"
                                android:overlapAnchor="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/led_tv"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="10dp"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="State"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_marginTop="0sp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="10dp"
                            android:paddingEnd="10dp"
                            android:layout_below="@+id/lv3"
                            android:layout_weight="1"
                            android:padding="11dp"
                            android:background="@drawable/gray_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Spinner
                                android:id="@+id/spinner3"
                                android:textColor="@color/gray"
                                android:overlapAnchor="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/led_tv"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="10dp"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="City"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_marginTop="0sp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="10dp"
                            android:paddingEnd="10dp"
                            android:layout_below="@+id/lv3"
                            android:layout_weight="1"
                            android:padding="11dp"
                            android:background="@drawable/gray_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Spinner
                                android:id="@+id/spinner4"
                                android:textColor="@color/gray"
                                android:overlapAnchor="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/led_tv"/>
                        </LinearLayout>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/save"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_width="150dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_height="60dp"
                            android:layout_below="@+id/lv3"
                            android:text="Save"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:backgroundTint="#0b1f51"
                            app:cornerRadius="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
<!--                android:id="@+id/act1"-->
<!--                android:layout_below="@+id/act"-->
<!--                android:textColor="#7d7d7d"-->
<!--                android:textStyle="normal"-->
<!--                android:textSize="12dp"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:layout_marginTop="0dp"-->
<!--                android:padding="0dp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="abide by the fees payment Terms and Condition as stated and"/>-->
<!--            <TextView-->
<!--                android:id="@+id/act2"-->
<!--                android:layout_below="@+id/act1"-->
<!--                android:textColor="#7d7d7d"-->
<!--                android:textStyle="normal"-->
<!--                android:textSize="12dp"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:layout_marginTop="0dp"-->
<!--                android:padding="0dp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="governed by PMIT Group of Colleges "/>-->
            <TextView
                android:id="@+id/add_row"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/recyclerLead"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="ADD"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:background="@drawable/choose_files"
                android:padding="10dp" />
                <LinearLayout
                    android:id="@+id/tableRow3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:layout_below="@+id/add_row"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/paymetId"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:text="Payment Method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioGroup
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioGroup">
                            <RadioButton
                                android:id="@+id/cashId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cash"
                                android:checked="false"
                                android:textSize="14dp" />

                            <RadioButton
                                android:id="@+id/Chequeid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cheque/DD"
                                android:textSize="14dp"
                                android:checked="false"
                                />
                            <RadioButton
                                android:id="@+id/OnlineId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UPI/NEFT/ Online/ RTGS"
                                android:textSize="14dp"
                                android:checked="false"
                                />
                        </RadioGroup>

                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="0dip"
                        android:weightSum="4"
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dip">



                        <EditText
                            android:id="@+id/Pamout"
                            android:layout_weight="0.8"
                            android:layout_marginLeft="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:hint="Amount"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:background="#f6f6f6"/>
                        <TextView
                            android:id="@+id/Pdates"
                            android:layout_weight="0.8"
                            android:layout_marginLeft="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:hint="Date"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:background="#f6f6f6"/>
                        <EditText
                            android:id="@+id/trangactionId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:background="#f6f6f6"
                            android:gravity="center"
                            android:padding="10dp"
                            android:hint="Transaction ID"
                            android:textColor="@color/black"
                            android:textSize="8sp" />
                        <LinearLayout
                            android:layout_weight="1.9"
                            android:background="@drawable/edit_grays"
                            android:layout_marginLeft="5dp"
                            android:layout_width="44dp"
                            android:layout_height="32dp">

                            <Spinner
                                android:id="@+id/bankNamss"
                                android:layout_gravity="center"
                                android:textColor="@color/gray"
                                android:layout_marginLeft="0dp"
                                android:overlapAnchor="false"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@+id/led_tv"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="0dip"
                        android:weightSum="3"
                        android:id="@+id/tableRow4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip">
                        <EditText
                            android:id="@+id/accHolderName"
                            android:layout_weight="1"
                            android:layout_marginLeft="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:hint="Acc Holder Name"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:background="#f6f6f6"/>
                        <EditText
                            android:id="@+id/checkDDNo"
                            android:layout_weight="1"
                            android:layout_marginLeft="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:hint="Cheque/DD No."
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:background="#f6f6f6"/>
                        <EditText
                            android:id="@+id/SenderBankName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#f6f6f6"
                            android:gravity="center"
                            android:padding="10dp"
                            android:hint="Bank Name"
                            android:textColor="@color/black"
                            android:textSize="8sp" />

                    </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:padding="0dip"
                android:weightSum="2"
                android:id="@+id/tableRow44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip">
                <EditText
                    android:id="@+id/branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#f6f6f6"
                    android:gravity="center"
                    android:padding="10dp"
                    android:hint="Branch"
                    android:textColor="@color/black"
                    android:textSize="8sp" />
                <TextView
                    android:id="@+id/checkDate"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#f6f6f6"
                    android:gravity="center"
                    android:padding="10dp"
                    android:hint="Enter Date"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

            </LinearLayout>
                    <TextView
                        android:id="@+id/select_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="0dp"
                        android:layout_weight="0"
                        android:background="@drawable/choose_files"
                        android:gravity="center"
                        android:layout_below="@+id/tableRow44"
                        android:padding="10dp"
                        android:text="Choose File"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@+id/select_file"
                        android:id="@+id/recyclerLead1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/send"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tableRow3"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12sp"
                android:text="Send"
                android:textColor="#031e55"
                android:textSize="12sp"
                app:backgroundTint="#0fd4f7"
                app:cornerRadius="10dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
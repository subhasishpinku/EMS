<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scaleType="fitXY"
    android:background="@drawable/bgs1"
    tools:context=".ui.SplashScreenActivity"
    tools:ignore="MissingDefaultResource">
    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/slider"
        android:layout_marginTop="100sp"
        android:layout_width="fill_parent"
        android:layout_height="300sp"
        app:iss_auto_cycle="true"
        app:iss_period="1500"
        app:iss_delay="0"
        app:iss_text_align="CENTER"
        app:iss_error_image="@drawable/error"
        app:iss_selected_dot="@drawable/default_selected_dot"
        app:iss_unselected_dot="@drawable/default_unselected_dot"/>

    <ImageView
        android:layout_marginTop="392sp"
        android:id="@+id/header_cover_image"
        android:layout_centerHorizontal="true"
        android:layout_width="250sp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:background="@drawable/shadows" />
    <TextView
        android:id="@+id/tv_id"
        android:layout_below="@+id/header_cover_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="50sp"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/sp_blue"
        android:text="Welcome to"/>
    <TextView
        android:id="@+id/tv_id1"
        android:layout_below="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/sp_blue1"
        android:text="PMIT Group of Colleges"/>

    <TextView
        android:id="@+id/tv_id2"
        android:layout_below="@+id/tv_id1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:layout_marginLeft="50sp"
        android:textSize="38sp"
        android:textStyle="bold"
        android:textColor="@color/sp_blue1"
        android:text="Manage your daily tasks"/>

    <ImageView
        android:layout_below="@+id/tv_id2"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="50sp"
        android:alpha="0.4"
        android:id="@+id/btn_Img"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:scaleType="fitXY"
        android:background="@drawable/btn_sp" />
    <TextView
        android:id="@+id/btn_tv"
        android:layout_toRightOf="@+id/btn_Img"
        android:layout_alignBaseline="@+id/btn_Img"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/tv_id2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/sp_blue1"
        android:text="Get Started"/>
</RelativeLayout>
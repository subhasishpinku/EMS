<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-127dp">
        <RelativeLayout
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/fram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/header_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/bg_blue" />
            </FrameLayout>
            <ImageView
                android:id="@+id/Img_Id"
                android:layout_marginRight="20dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:background="@mipmap/white_logo" />
            <TextView
                android:id="@+id/led_tv"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/Img_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="SUBHASISH SINGHA"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/collageName_tv"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/led_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="VIDYASAGAR B.ED COLLEGE"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/courseName_tv"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/collageName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="B.ED"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/phone_tv"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/courseName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="9163752468"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wphone_tv"
                android:layout_toRightOf="@+id/phone_tv"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/courseName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="6290532924"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/email_tv"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="a@gmail.com"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:id="@+id/rv"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5sp"
                android:padding="2dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/led_tv2"
                    android:padding="8dp"
                    android:layout_marginEnd="0dp"
                    android:textColor="@color/black"
                    android:background="@drawable/followups_bgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FOLLOWUPS"/>
                <TextView
                    android:id="@+id/led_tv3"
                    android:layout_toRightOf="@+id/led_tv2"
                    android:padding="8dp"
                    android:textColor="#c90101"
                    android:background="@drawable/number_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="34"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="20dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/fram"
                android:orientation="horizontal"
                android:padding="0dip"
                android:weightSum="5"
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bookingId"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#035496"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Payment Type"
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/dateId"
                    android:layout_marginLeft="3dp"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Amount"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:background="#035496"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/amountId"
                    android:layout_marginLeft="2dp"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:text="Sdl.Date"
                    android:background="#035496"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:background="#035496"
                    android:gravity="center"
                    android:layout_width="44dp"
                    android:layout_height="32dp">
                    <ImageView
                        android:id="@+id/Img"
                        android:scaleType="fitXY"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="#035496"
                    android:gravity="center"
                    android:layout_width="44dp"
                    android:layout_height="32dp">
                    <ImageView
                        android:id="@+id/Img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/tableRow1"
                android:id="@+id/recyclerLead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
<!--            <TextView-->
<!--                android:id="@+id/act"-->
<!--                android:layout_below="@+id/recyclerLead"-->
<!--                android:textColor="#7d7d7d"-->
<!--                android:textStyle="normal"-->
<!--                android:textSize="12dp"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:padding="0dp"-->
<!--                android:layout_width="wrap_content"-->

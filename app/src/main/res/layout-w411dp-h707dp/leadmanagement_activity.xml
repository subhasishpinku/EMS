<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_mobile"
    tools:ignore="MissingDefaultResource">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-127dp">
        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:background="@mipmap/logo_black"
                android:scaleType="fitXY" />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/round_image"
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:riv_corner_radius="20dip"
                android:elevation="5dp"
                android:scaleType="fitXY"
                android:background="@mipmap/img_bgs" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/round_image"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pnone_ID"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_textbg"
                    android:drawableEnd="@drawable/ic_baseline_search_24"
                    android:inputType="text"
                    android:maxLength="10"
                    android:paddingLeft="10dp"
                    android:paddingEnd="20dp" />

                <TextView
                    android:id="@+id/led_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pnone_ID"
                    android:layout_marginTop="20sp"
                    android:text="LEAD"
                    android:textColor="#0b589f"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/led_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/led_tv"
                    android:layout_marginTop="0sp"
                    android:text="MANAGEMENT"
                    android:textColor="#0b589f"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/home_corner2"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/pnone_ID"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/lead_corne"
                    android:scaleType="centerCrop">

                    <TextView
                        android:id="@+id/add_Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="ADD"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/add_Id1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/add_Id"
                        android:layout_marginLeft="20dp"
                        android:text="NEW LEAD"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/add_Id"
                        android:background="@drawable/add_group" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/led_tv1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/leadmange_corner1"
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="20sp"
                        android:background="@drawable/yellow_cornners"
                        android:scaleType="fitXY">

                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <ImageView
                            android:id="@+id/b_image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tv_1"
                            android:background="@drawable/clipboard" />

                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:text="manage"
                            android:textColor="#735c02"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="28dp"
                            android:text="LEADS"
                            android:textColor="#735c02"
                            android:textSize="30sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/leadmange_corner2"
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20sp"
                        android:layout_toRightOf="@+id/leadmange_corner1"
                        android:background="@drawable/green_cornners"
                        android:scaleType="fitXY">

                        <TextView
                            android:id="@+id/tv_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <ImageView
                            android:id="@+id/b_image1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tv_11"
                            android:background="@drawable/thumbs_up" />

                        <TextView
                            android:id="@+id/tv_21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_11"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="16dp"
                            android:text="my student"
                            android:textColor="#444444"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_11"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="28dp"
                            android:text="LIST"
                            android:textColor="#444444"
                            android:textSize="30sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:id="@+id/leadmange_corner13"
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_below="@+id/leadmange_corner1"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/red_cornners"
                        android:scaleType="centerCrop">

                        <TextView
                            android:id="@+id/tv_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <ImageView
                            android:id="@+id/b_image3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tv_13"
                            android:background="@drawable/mark" />

                        <TextView
                            android:id="@+id/tv_23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_13"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="25dp"
                            android:text="rejected"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_13"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="42dp"
                            android:text="ADMISSION"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/leadmange_corner4"
                        android:layout_toRightOf="@+id/leadmange_corner13"
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_below="@+id/leadmange_corner2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/blue_cornners"
                        android:scaleType="centerCrop">

                        <TextView
                            android:id="@+id/tv_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <ImageView
                            android:id="@+id/b_image4"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tv_4"
                            android:background="@drawable/file" />

                        <TextView
                            android:id="@+id/tv_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_4"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="25dp"
                            android:text="pending"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_34"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_4"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="42dp"
                            android:text="ADMISSION"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </RelativeLayout>



            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

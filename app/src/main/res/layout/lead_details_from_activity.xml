<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-127dp">
        <RelativeLayout
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/fram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/header_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/bg_blue" />
            </FrameLayout>
            <ImageView
                android:id="@+id/Img_Id"
                android:layout_marginRight="20dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:background="@mipmap/white_logo" />
            <TextView
                android:id="@+id/led_tv"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/Img_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Lead Details"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_Id"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/led_tv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_textbg1"
                android:drawableStart="@drawable/ic_baseline_search_24"
                android:inputType="text"
                android:maxLength="10"
                android:layout_marginRight="75dp"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp" />
            <ImageView
                android:id="@+id/ImgZip"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/led_tv"
                android:layout_marginTop="10sp"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/zips"
                android:background="@drawable/zip_code" />
            <RelativeLayout
                android:id="@+id/rv"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20sp"
                android:padding="2dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/search_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/led_tv2"
                    android:padding="8dp"
                    android:layout_marginEnd="0dp"
                    android:textColor="@color/black"
                    android:background="@drawable/followups_bgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FOLLOWUPS"/>
                <TextView
                    android:id="@+id/led_tv3"
                    android:layout_toRightOf="@+id/led_tv2"
                    android:textColor="#c90101"
                    android:padding="8dp"
                    android:background="@drawable/number_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="34"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/led_name"
                android:layout_below="@+id/fram"
                android:textColor="#3c6fa2"
                android:textStyle="normal"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Paymnet Information for"/>
<!--            <TextView-->
<!--                android:id="@+id/led_name1"-->
<!--                android:layout_marginLeft="144dp"-->
<!--                android:layout_below="@+id/fram"-->
<!--                android:textColor="#3c6fa2"-->
<!--                android:textStyle="bold"-->
<!--                android:textSize="18dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:padding="0dp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Akash Mondal"/>-->
            <TextView
                android:id="@+id/led_names1"
                android:layout_below="@+id/led_name"
                android:textColor="#004e90"
                android:textStyle="normal"
                android:textSize="12dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="5dp"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="for the Course"/>
            <TextView
                android:id="@+id/led_names2"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/led_name"
                android:textColor="#004e90"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akash Mondal"/>
            <TextView
                android:id="@+id/led_names3"
                android:layout_below="@+id/led_names1"
                android:textColor="#004e90"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D.Pharma"/>
            <LinearLayout
                android:id="@+id/lv"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/led_names3"
                android:background="@drawable/edit_gray"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:overlapAnchor="false"
                    android:id="@+id/collageList"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv2"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_below="@+id/lv"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:background="@drawable/edit_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/mod_of_payment"
                        android:textColor="@color/gray"
                        android:layout_marginLeft="8dp"
                        android:overlapAnchor="false"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/led_tv"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/trangaction_id"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_gray"
                    android:layout_below="@+id/led_tv"
                    android:layout_marginLeft="5dp"
                    android:hint="Transaction ID"
                    android:inputType="text"
                    android:maxLength="10"
                    android:paddingLeft="10dp"
                    android:paddingEnd="10dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lv3"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_below="@+id/lv2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:background="@drawable/edit_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/paid_to_account"
                        android:textColor="@color/gray"
                        android:layout_marginLeft="8dp"
                        android:overlapAnchor="false"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/led_tv"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pay_name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_gray"
                    android:layout_below="@+id/led_tv"
                    android:layout_marginLeft="5dp"
                    android:hint="payee Name"
                    android:inputType="text"
                    android:maxLength="10"
                    android:paddingLeft="10dp"
                    android:paddingEnd="10dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lv4"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_below="@+id/lv3"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/chooseReceipt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_grayy"
                    android:layout_below="@+id/led_tv"
                    android:layout_marginRight="0dp"
                    android:hint="Choose Receipt to Upload"
                    android:inputType="text"
                    android:maxLength="10"
                    android:layout_marginTop="1.9dp"
                    android:paddingLeft="10dp"
                    android:paddingEnd="10dp" />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/select_file"
                    android:gravity="center"
                    android:padding="17dp"
                    android:textSize="12dp"
                    android:layout_marginEnd="0dp"
                    android:textColor="@color/white"
                    android:background="@drawable/select_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select File"/>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/back"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_width="150dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:layout_height="60dp"
                android:layout_below="@+id/lv4"
                android:text="Send"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:backgroundTint="#0b1946"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>